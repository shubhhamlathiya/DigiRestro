<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="copyright" content="MACode ID, https://macodeid.com">
    <title>Digirestro</title>
    <link rel="stylesheet" href="assets/vendor/animate/animate.css">
    <link rel="stylesheet" href="assets/css/bootstrap.css">
    <link rel="stylesheet" href="assets/css/maicons.css">
    <link rel="stylesheet" href="assets/vendor/owl-carousel/css/owl.carousel.css">
    <link rel="stylesheet" href="assets/css/theme.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>
    <% if(session.alert){ %>
        <script>
          // Use SweetAlert to show an alert
          Swal.fire({
            icon: "error",
            title: "My Dear,",
            text: "<%= session.alertMessage %>",
          });
        </script>
        <% } %>
<main>
    <div class="page-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 py-3 wow zoomIn">
                    <h2 class="title-section" align="center">Digirestro</h2>
                    <div class="img-place text-center">
                        <img src="assets/img/bg_image_2.png" alt="">
                    </div>
                </div>
                <div class="col-lg-6 py-3 wow fadeInUp">
                    <h2 class="title-section">Registration</h2>
                    <div class="divider"></div>

                    <form action="/registration" method="post" enctype="application/x-www-form-urlencoded" onsubmit="return validateForm()">
                        <div class="py-2">
                            <input type="text" class="form-control" placeholder="Name" name="name" required
                                   onkeypress="return (event.charCode > 64 && event.charCode < 91) || (event.charCode > 96 && event.charCode < 123) || (event.charCode > 31 && event.charCode < 33)">
                        </div>
                        <div class="py-2">
                                <input type="email" class="form-control" placeholder="Email Address" name="email_id" required>
                        </div>
                        <div class="py-2">
                            <input type="text" class="form-control" placeholder="Mobile Number" name="mobile_no" required
                                   onkeypress="return validateContact(event)">
                        </div>
                        <div class="py-2">
                            <input type="password" class="form-control" placeholder="Password" name="password" required>
                        </div>
                        <div class="py-2">
                            <input type="password" class="form-control" placeholder="Confirm Password" name="cpassword" required>
                        </div>
                        <div class="py-2">
                            <input type="file" class="form-control" name="image" onfocus="this.placeholder='Choose a photo...'" onblur="this.placeholder='hy'" required>
                        </div>

                        <button type="submit" class="btn btn-primary rounded-pill mt-4">Submit</button>
                    </form>
                </div>
            </div>
        </div> <!-- .container -->
    </div> <!-- .page-section contact us - -->
</main>

<script>
    function validateContact(event) {
        const charCode = event.charCode || event.keyCode;
        const inputValue = event.target.value;

        // Allow only digits and limit the length to 10
        if ((charCode >= 48 && charCode <= 57) && inputValue.length < 10) {
            // Check if the first digit is between 6 and 9
            if (inputValue.length === 0 && charCode >= 54 && charCode <= 57) {
                return true;
            }
            if (inputValue.length !== 0 && charCode >= 48 && charCode <= 57) {
                return true;
            }
        }
        // Prevent the input if conditions are not met
        event.preventDefault();
        return false;
    }

    function validateForm() {
        var contact = document.getElementsByName("mobile_no")[0].value;
        var email = document.getElementsByName("email_id")[0].value;
        var password = document.getElementsByName("password")[0].value;
        var cpassword = document.getElementsByName("cpassword")[0].value;
        
        // Validate contact (only 10 numbers)
        if (contact.length !== 10 || isNaN(contact)) {
            alert("Please enter a valid 10-digit contact number.");
            return false;
        }

        // Validate email
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            alert("Please enter a valid email address.");
            return false;
        }

        // Validate password (at least 8 characters)
        if (password.length < 8) {
            alert("Password should be at least 8 characters long.");
            return false;
        }

        // Validate password and confirm password match
        if (password !== cpassword) {
            alert("Passwords do not match.");
            return false;
        }
        return true;
    }
</script>

<script src="assets/js/jquery-3.5.1.min.js"></script>
<script src="assets/js/bootstrap.bundle.min.js"></script>
<script src="assets/vendor/wow/wow.min.js"></script>
